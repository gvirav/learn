<div class="row">
  <div class="span3">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: "well" }) do |f| %>

    <%= f.error_notification %>

  <fieldset>
    <legend>Edit <%= resource_name.to_s.humanize %> Profile</legend>
    <%= f.input :email %>
    <%= f.input :password, :autocomplete => "off", :placeholder => "Optional change password." %>
    <%= f.input :password_confirmation, :placeholder => "Confirm password change."  %>
    <%= f.input :current_password, :placeholder => "Confirm current to verify identity."%>
    <div class="form-actions"><%= f.button :submit, "Update" %></div>
  </fieldset>
  <% end %>
  </div>

  <div class="span9">
    <legend>Your Goals</legend>
      <div class="span2">Goal </div>
      <div class="span5">Description </div>
      <div class="span1">Due </div>
    <br /> <br />
      <% @user.goals.each do |goal| %>
        <div class="span2"><%= link_to(goal.name, goal_path(goal)) %></div>
        <div class="span5"><%= truncate(goal.description, :length => 125) %></div>
        <div class="span1"><%= truncate(goal.due.to_formatted_s(:short), :length => 11) %></div>
      <% end %>
  </div>
</div><!-- end row -->

  <h4>Cancel Your Account</h4>
  <p>Unhappy? <%= link_to "Deactivate account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
  <%= link_to "Back", :back %>
