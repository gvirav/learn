<h3>Checkpoint List</h3>

<table class="table">
	<th>Checkpoint</th>
	<th>Checkpoint Deadline</th>
	<th>Goal</th>
	<th>Complete?</th>

<% @checkpoints.each do |checkpoint| %>
	<tr>
		<td><%= link_to(checkpoint.title, goal_checkpoint_path(checkpoint.goal, checkpoint)) %></td>
		<td><%= checkpoint.deadline.to_formatted_s(:long) %></td>
		<td><%= link_to(checkpoint.goal.name, checkpoint.goal) %></td>
		<% if user_signed_in? && current_user == checkpoint.goal.user %>
		<td><%= check_box_tag(checkpoint.complete) %></td>
		<% end %>
	</tr>
<% end %>
</table>

<hr />
<%= link_to("Back to Goals", goals_path) %>