<%= simple_form_for @goal, :html => {:class => 'form-horizontal' } do |f| %>

	<% if @goal.errors.any? %>
	<div id="error_explanation">
		<h3><%= pluralize(@goal.errors.count, "error") %> prohibited this from saving:</h3>
			<ul>
				<%= @goal.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
	</div>
	<% end %>

	<%= f.text_field :name, :placeholder => "Goal Name" %>
